{
  "manifest_version": 3,
  "name": "Simple Chrome Extension",
  "version": "1.0",
  "description": "A simple Chrome extension with popup functionality",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Simple Extension"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
